            id: username
            size_hint_y: None
            height: 50
            hint_text: "username"
        MDTextField:
            pos_hint: {"x":.025, "y":.19}
            size_hint:(.9, .25)
            id: password
            password: True
            size_hint_y: None
            height: 50
            hint_text: "password"
        MDFillRoundFlatButton:
            halign: "center"
            id: login
            md_bg_color: "orange"
            pos_hint: {"x":.025, "y":.115}
            size_hint:(.9, .25)
            text: "Log In"
            size_hint_y: None
            height: 50
            font_size: 18
            on_press:
                app.log_in()
        MDRoundFlatButton:
            id: forgot_password
            text: "Forgot password?"
            text_color: "white"
            line_color: 0, 0, 0, 0
            pos_hint: {"x":.0, "y":.36}
            size_hint:(.1,.2)
            size_hint_y: None
            height: 5
            font_size: 12
            on_press:
                app.forgot_password()
        MDRoundFlatIconButton:
            icon: 'checkbox-blank-outline'
            id: stay_signed
            text: "Stay signed in"
            text_color: "white"
            line_color: 0, 0, 0, 0
            pos_hint: {"x":.0, "y":.4}
            size_hint:(.1,.3)
            size_hint_y: None
            height: 5
            font_size: 12
            on_press:
                app.stay_signed()
        MDFillRoundFlatButton:
            md_bg_color: "orange"
            pos_hint: {"x":.025, "y":.05}
            size_hint:(.9, .25)
            text: "Register"
            size_hint_y: None
            height: 50
            font_size: 18
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = 'register'
