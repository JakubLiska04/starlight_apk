Screen:
    on_leave: app.previous_screen = self.name
#Register obrazovka
<Register>
    orientation: 'vertical'
    FloatLayout:
        Label:
            pos_hint: {"x":.04, "y":.3}
            text: "REGISTER TO..."
            font_size: 32
        Label:
            pos_hint: {"x":.05, "y":.25}
            text: "APK NAME"
            font_size: 26
        MDFillRoundFlatButton:
            pos_hint: {"x":0.75, "y":0.92}
            size_hint:(.1, .3)
            text: "Log In"
            size_hint_y: None
            height: 5
            font_size: 12
            on_press:
                root.manager.current = 'log_in'
        MDTextField:
            pos_hint: {"x":.025, "y":.3}
            size_hint:(.9, .25)
            id: username
            size_hint_y: None
            height: 50
            hint_text: "username"
        MDTextField:
            pos_hint: {"x":.025, "y":.24}
            size_hint:(.9, .25)
            id: email
            size_hint_y: None
            height: 50
            hint_text: "email"
        MDTextField:
            pos_hint: {"x":.025, "y":.18}
            size_hint:(.9, .25)
            id: password
            password: True
            size_hint_y: None
            height: 50
            hint_text: "password"

        MDFillRoundFlatButton:
            halign: "center"
            md_bg_color: "orange"
            pos_hint: {"x":.025, "y":.115}
            size_hint:(.9, .25)
            text: "Sign in"
            size_hint_y: None
            height: 50
            font_size: 18
            on_press:
                app.register()
        MDFillRoundFlatButton:
            halign: "center"
            md_bg_color: "orange"
            pos_hint: {"x":.025, "y":.05}
            size_hint:(.9, .25)
            text: "Quit"
            size_hint_y: None
            height: 50
            font_size: 18
            on_press:
                quit()
#Log in obrazovka
<LogIn>
    orientation: 'vertical'
    FloatLayout:
        Label:
            pos_hint: {"x":.04, "y":.3}
